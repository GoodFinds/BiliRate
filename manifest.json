{
    "manifest_version": 3,
    "name": "B站三连率计算器",
    "name__en": "Bilibili Triple Rate Calculator", 
    "version": "1.0.0",
    "description": "智能计算B站视频的三连率（点赞、投币、收藏），提供数据可视化和评级系统，帮助UP主和观众快速了解视频质量。",
    "description__en": "Smart calculator for Bilibili video triple rates (like, coin, favorite) with data visualization and rating system.",
    "homepage_url": "https://github.com/yourusername/bilibili-triple-rate-calculator",
    "author": "Your Name",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png", 
        "64": "icons/icon64.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "64": "icons/icon64.png",
            "128": "icons/icon128.png"
        },
        "default_title": "B站三连率计算器",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.bilibili.com/video/*",
                "https://bilibili.com/video/*"
            ],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "storage"
    ],
    "host_permissions": [],
    "web_accessible_resources": [],
    "minimum_chrome_version": "88"
}
